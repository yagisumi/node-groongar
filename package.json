{
  "name": "@yagisumi/groongar",
  "version": "0.1.0",
  "description": "Groonga client helper.",
  "keywords": [
    "groonga"
  ],
  "private": true,
  "main": "lib/groongar",
  "module": "lib/groongar.mjs",
  "types": "lib/groongar.d.ts",
  "unpkg": "umd/groongar.js",
  "scripts": {
    "test": "run-s prettier:check eslint test:build test:jest:nroonga",
    "prettier:check": "prettier --check \"**/*.{ts,js,json}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,js,json}\"",
    "eslint": "eslint \"{src,test,tools}/**/*.{js,ts}\"",
    "test-ci": "run-s prettier:check eslint build:* test:build test:mocha:http test:mocha:nroonga:coverage",
    "test:build": "tsc -p test/src",
    "test:jest:nroonga": "jest --config config/jest.config.js --testEnvironment=./test/lib/env_nroonga.js",
    "test:jest:http": "jest --config config/jest.config.js --testEnvironment=./test/lib/env_http.js --collectCoverage=false",
    "test:jest:stdio": "jest --config config/jest.config.js --testEnvironment=./test/lib/env_stdio.js --collectCoverage=false",
    "test:mocha:nroonga": "cross-env TS_NODE_FILES=true TS_NODE_PROJECT=test/tsconfig.mocha.json mocha --config config/.mocharc.json -r test/lib/mocha_env_nroonga.js \"test/**/*.test.ts\"",
    "test:mocha:nroonga:coverage": "nyc --nycrc-path config/nyc.config.js npm run test:mocha:nroonga -- --no-parallel",
    "test:mocha:http": "cross-env TS_NODE_FILES=true TS_NODE_PROJECT=test/tsconfig.mocha.json mocha --config config/.mocharc.json -r test/lib/mocha_env_http.js \"test/**/*.test.ts\"",
    "test:mocha:stdio": "cross-env TS_NODE_FILES=true TS_NODE_PROJECT=test/tsconfig.mocha.json --config config/.mocharc.json -r test/lib/mocha_env_stdio.js \"test/**/*.test.ts\"",
    "build": "run-s clean build:*",
    "clean": "rimraf lib coverage umd *.tgz .rpt2_cache .nyc_output test/lib",
    "build:cjs": "rollup -c config/rollup.config.js -f cjs -o ./lib/groongar.js",
    "build:mjs": "rollup -c config/rollup.config.js -f es -o ./lib/groongar.mjs",
    "build:umd": "rollup -c config/rollup.config.umd.js",
    "build:d_ts": "tsc -p src -d --emitDeclarationOnly --outDir ./lib",
    "prepack": "run-s build test",
    "tools:groongar": "ts-node tools/generate_groongar.ts"
  },
  "author": "yagisumi",
  "repository": "github:yagisumi/node-groongar",
  "homepage": "http://github.com/yagisumi/node-groongar#readme",
  "license": "MIT",
  "prettier": "@yagisumi/my-config-prettier",
  "devDependencies": {
    "@jest/types": "^26.5.2",
    "@types/jest": "^26.0.14",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.11.5",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@yagisumi/groonga-command": "^0.1.0",
    "@yagisumi/groonga-http-client": "^0.1.0",
    "@yagisumi/groonga-stdio-client": "^0.1.0",
    "@yagisumi/my-config-prettier": "^1.0.0",
    "axios": "^0.20.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "get-port": "^5.1.1",
    "heredocument": "^2.0.2",
    "jest": "^26.5.2",
    "jest-environment-node": "^26.5.2",
    "mkdirp": "^1.0.4",
    "mocha": "^8.1.3",
    "mocha-ui-jest": "^0.4.0",
    "moment": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "nroonga": "^0.4.3",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "readdirp": "^3.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  }
}
